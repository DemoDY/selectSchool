<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.select.school.dao.mapper.OptionMapper">
    <resultMap type="com.select.school.model.entity.Option" id="option">
        <id column="id" property="id"/>
        <result column="problem_id" property="problemId"/>
        <result column="o_option" property="option"/>
        <result column="o_number" property="number"/>
        <result column="o_description" property="description"/>
        <result column="o_tl" property="tl"/>
    </resultMap>
    <select id="selectByOption" resultType="com.select.school.model.entity.Option" resultMap="option">
        select
        o.id,
        o.problem_id,
        o.o_number,
        o.o_description,
        o.o_tl,
        o.o_option
        from d_option o
        where o.o_option = #{option}
        and o.problem_id = 6
    </select>
</mapper>